{
  "name": "bastion-protocol",
  "version": "1.0.0",
  "description": "Decentralized lending circles protocol with social verification",
  "private": true,
  "workspaces": [
    "frontend",
    "backend", 
    "contracts",
    "telegram-bot"
  ],
  "scripts": {
    "clean": "lerna clean",
    "build": "lerna run build",
    "test": "lerna run test",
    "dev": "lerna run dev --parallel",
    "lint": "lerna run lint",
    "type-check": "lerna run type-check",
    "install:all": "npm install && npm install --workspaces",
    "backend:dev": "lerna run dev --scope=@bastion/backend",
    "frontend:dev": "lerna run dev --scope=@bastion/frontend", 
    "contracts:dev": "lerna run dev --scope=@bastion/contracts",
    "telegram-bot:dev": "lerna run dev --scope=@bastion/telegram-bot",
    "backend:build": "lerna run build --scope=@bastion/backend",
    "frontend:build": "lerna run build --scope=@bastion/frontend",
    "contracts:build": "lerna run build --scope=@bastion/contracts",
    "telegram-bot:build": "lerna run build --scope=@bastion/telegram-bot"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "lerna": "^8.0.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Bastion-Protocol/bastion.git"
  },
  "keywords": [
    "defi",
    "lending",
    "blockchain",
    "yellow-network",
    "aave",
    "social-verification"
  ],
  "author": "Bastion Protocol Team",
  "license": "MIT"
}