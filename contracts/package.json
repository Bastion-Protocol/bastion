  "license": "MIT",
  "keywords": [
    "defi",
    "lending",
    "circles",
    "state-channels",
    "erc-7824",
    "yellow-network",
    "aave",
    "social-verification",
    "blockchain",
    "ethereum",
    "polygon",
    "arbitrum",
    "optimism",
    "base"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Bastion-Protocol/bastion.git",
    "directory": "contracts"
  },
  "bugs": {
    "url": "https://github.com/Bastion-Protocol/bastion/issues"
  },
  "homepage": "https://bastion-protocol.com"
