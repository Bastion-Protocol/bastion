{
  "name": "@bastion/contracts",
  "version": "1.0.0",
  "description": "Solidity smart contracts implementing the Bastion Protocol lending circles",
  "scripts": {
    "dev": "hardhat node",
    "build": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "deploy:localhost": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:testnet": "hardhat run scripts/deploy.ts",
    "deploy:mainnet": "hardhat run scripts/deploy.ts",
    "verify": "hardhat verify",
    "verify:all": "node scripts/verify-all.js",
    "lint": "solhint contracts/**/*.sol",
    "lint:fix": "solhint contracts/**/*.sol --fix",
    "type-check": "hardhat typechain",
    "typechain": "hardhat typechain",
    "clean": "hardhat clean",
    "size": "hardhat size-contracts",
    "analyze": "slither .",
    "flatten": "hardhat flatten"
  },
  "dependencies": {
    "@aave/core-v3": "^1.19.3",
    "@openzeppelin/contracts": "^5.0.1",
    "@openzeppelin/contracts-upgradeable": "^5.0.1",
    "dotenv": "^16.4.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-verify": "^2.0.4",
    "@typechain/hardhat": "^9.1.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "chai": "^4.3.10",
    "ethers": "^6.10.0",
    "hardhat": "^2.19.5",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-contract-sizer": "^2.10.0",
    "solidity-coverage": "^0.8.7",
    "solhint": "^4.1.1",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
