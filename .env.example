# Bastion Protocol Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# BLOCKCHAIN CONFIGURATION
# ===========================================

# Sepolia Testnet Configuration (for development)
SEPOLIA_RPC_URL=https://rpc.sepolia.org
SEPOLIA_CHAIN_ID=11155111

# Alternative Sepolia RPC URLs (uncomment to use):
# SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# Private key for contract deployment (TESTNET ONLY - never use mainnet keys!)
# Get a dedicated testnet wallet from MetaMask for this
PRIVATE_KEY=your_sepolia_private_key_here

# ===========================================
# CONTRACT ADDRESSES
# ===========================================

# Deployed contract addresses on Sepolia (update after deployment)
BASTION_CORE_ADDRESS=
BASTION_LENDING_ADDRESS=
BASTION_CIRCLES_ADDRESS=

# ===========================================
# API KEYS
# ===========================================

# Etherscan API key (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Alchemy API key (optional, for better RPC performance)
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Infura API key (alternative RPC provider)
INFURA_API_KEY=your_infura_api_key_here

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Development mode (enables additional logging)
NODE_ENV=development

# Frontend development server port
REACT_APP_PORT=3000

# ===========================================
# NITROLITE CONFIGURATION
# ===========================================

# Yellow Network Clearnode endpoint
REACT_APP_CLEARNODE_URL=https://clearnet-sandbox.yellow.com

# Nitrolite SDK configuration
REACT_APP_NITROLITE_NETWORK=sepolia
REACT_APP_NITROLITE_DEBUG=true

# ===========================================
# SECURITY NOTES
# ===========================================
# 
